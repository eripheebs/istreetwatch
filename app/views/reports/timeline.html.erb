<div class='row'>
  <div class="col s12 m10 offset-m1">
    <h2>Timeline</h2>
    <%- @reports.each do |report| %>

      <div class="report card">
        <div class="card-content">
          <p class='time'><strong><%= "#{report.name}, " unless report.name.blank? %> <%= report.town %></strong> <%= report.time.strftime("%d %B") if report.time %></p>

          <% if report.description  %>
            <p class='summary'>
            <%= simple_format report.description %>
            </p>
          <% end %>
          <% if report.support  %>
            <p class='summary'><em>
            <%= simple_format report.support %>
            </em></p>
          <% end %>
        </div>
        <div class="card-action">
          <div class='share-buttons'>
            <div class="fb-share-button"
                 data-href="<%= report_url(report)%>"
                 data-layout="button"
                 data-size="large"
                 data-mobile-iframe="true">
            </div>
          </div>
         </div>
      </div>
    <%- end %>

    <%= will_paginate @reports %>
  </div>
</div>
